<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_participate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.github.splendinator.treasurehuntapp.Participate"
    android:background="@color/colorBlueLight">

    <TextView
        android:text="Participate"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:background="@color/colorWhite"
        android:layout_centerInParent="false"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <TextView
            android:text="Select a Treasure Hunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textStyle="bold"
        android:layout_below="@+id/banner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:text="Treasure Hunt #2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Hunt2"
        android:layout_weight="0"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:minHeight="78dp"
        android:layout_alignWithParentIfMissing="false"
        android:elevation="0dp"
        android:onClick="changeScreen"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Hunt1"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Treasure Hunt #1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Hunt1"
        android:layout_weight="0.1"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:minHeight="78dp"
        android:layout_alignWithParentIfMissing="false"
        android:elevation="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
